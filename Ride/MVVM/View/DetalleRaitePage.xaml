<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.DetalleRaitePage"
             NavigationPage.HasBackButton="True"
             Title="Detalle del Raite">

   
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF" Offset="0.0"/>
            <GradientStop Color="#E3F0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*,Auto">

  
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="15" Spacing="20">

           
                <Frame Padding="20" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Costo: usted puede brindar dinero al conductor si lo desea." 
                               FontSize="20" FontAttributes="Bold" TextColor="#003E7E"/>
                        <Label Text="2 Asientos Disponibles" FontSize="16" TextColor="#555"/>
                    </VerticalStackLayout>
                </Frame>

               
                <Frame Padding="15" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Origen: Pueblo Yaqui" FontAttributes="Bold" FontSize="18" TextColor="#003E7E"/>
                        <Label Text="Destino: UTS" FontAttributes="Bold" FontSize="18" TextColor="#003E7E"/>
                        <BoxView HeightRequest="1" Color="#DDDDDD"/>
                        <Label Text="Fecha y hora: Hoy, 7:00 AM" FontSize="16" TextColor="#555"/>
                        <Label Text="Llegada estimada: 8:15 AM" FontSize="16" TextColor="#555"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="15" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#CCCCCC"/>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Conductora Pamela Lopez" FontAttributes="Bold" TextColor="#003E7E"/>
                            <Label Text="4.8 estrellas" FontSize="14" TextColor="#555"/>
                        </VerticalStackLayout>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ConductorInfo_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Padding="15" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Pasajeros Confirmados (2)" FontAttributes="Bold" FontSize="18" TextColor="#003E7E"/>
                        <HorizontalStackLayout Spacing="10">
                            <Frame WidthRequest="45" HeightRequest="45" CornerRadius="22.5" BackgroundColor="#CCCCCC"/>
                            <Frame WidthRequest="45" HeightRequest="45" CornerRadius="22.5" BackgroundColor="#CCCCCC"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>


        <Frame Grid.Row="1" Padding="20,10,20,20" BackgroundColor="White" HasShadow="True" CornerRadius="15">
            <Button Text="Solicitar Raite" 
                    HeightRequest="55" 
                    CornerRadius="15"
                    BackgroundColor="#1A73E8"
                    TextColor="White"
                    FontAttributes="Bold"
                    Command="{Binding SolicitarRaiteCommand}" />
        </Frame>

    </Grid>

</ContentPage>

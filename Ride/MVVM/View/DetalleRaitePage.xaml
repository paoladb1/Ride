<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.DetalleRaitePage"
             Title="Detalle del Raite">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="0">

                <Grid HeightRequest="200" BackgroundColor="#E0E0E0" Padding="20"
                      RowDefinitions="*,Auto">
                    <Label Text="Mapa de ruta" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           FontSize="20"/>

                    <HorizontalStackLayout Grid.Row="1" 
                                           HorizontalOptions="Center" 
                                           Spacing="20" Margin="0,10,0,0">
                        <Label Text="Costo: 5 MXN" 
                               FontSize="32" 
                               FontAttributes="Bold" 
                               TextColor="#38A98F"/>

                        <Label Text="4 Asientos libres" 
                               FontSize="18" 
                               VerticalOptions="End" 
                               TextColor="#666"/>
                    </HorizontalStackLayout>
                </Grid>

                <VerticalStackLayout Padding="20" Spacing="25">

                    <Frame Padding="15" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Origen: San Francisco" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="Destino: Palo Alto" FontAttributes="Bold" FontSize="18"/>
                            <BoxView HeightRequest="1" Color="#EEEEEE"/>
                            <Label Text="Fecha y hora: Hoy, 7:00 AM" FontSize="16"/>
                            <Label Text="Llegada estimada: 8:15 AM" FontSize="16"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Padding="15" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*">

                            <!-- Sin imagen -->
                            <BoxView WidthRequest="50" HeightRequest="50" 
                                     Color="#CCCCCC" 
                                     Margin="0,0,15,0"/>

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="Conductor: Jane Doe" 
                                       FontAttributes="Bold" 
                                       TextColor="#38A98F"/>

                                <Label Text="Rating: 4.8 de 25 viajes"
                                       FontSize="14" 
                                       TextColor="#666"/>
                            </VerticalStackLayout>

                        </Grid>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ConductorInfo_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Pasajeros Confirmados (2)" 
                               FontAttributes="Bold" 
                               FontSize="18"/>

                        <HorizontalStackLayout Spacing="10">

                            <!-- Reemplazo de imÃ¡genes por cuadros -->
                            <BoxView WidthRequest="40" HeightRequest="40" Color="#CCC"/>
                            <BoxView WidthRequest="40" HeightRequest="40" Color="#CCC"/>

                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1" Padding="20,10,20,20" BackgroundColor="White">
            <Button Text="Solicitar Raite" 
                    HeightRequest="55" 
                    Command="{Binding SolicitarRaiteCommand}" />
        </Grid>

    </Grid>

</ContentPage>

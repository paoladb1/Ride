<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.DetalleRaitePage"
             NavigationPage.HasBackButton="False"
             Title="Detalle del Raite">

    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF" Offset="0.0"/>
            <GradientStop Color="#E3F0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,* ,Auto" Padding="15">

        <!-- Flecha de regreso -->
        <HorizontalStackLayout Grid.Row="0" Padding="0,10">
            <ImageButton Source="back.png"
                         HeightRequest="32"
                         WidthRequest="32"
                         BackgroundColor="Transparent"
                         Clicked="BtnBack_Clicked"/>
        </HorizontalStackLayout>

        <!-- Contenido -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <!-- Costo -->
                <Frame Padding="20" BackgroundColor="White"
                       CornerRadius="15" HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Costo"
                               FontAttributes="Bold"
                               FontSize="24"
                               TextColor="Black"/>

                        <Label Text="Usted podra elegir si quiere brindar dinero al conductor."
                               FontSize="16"
                               TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Origen-destino -->
                <Frame Padding="15" BackgroundColor="White"
                       CornerRadius="15" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Origen: Pueblo Yaqui"
                               FontAttributes="Bold" FontSize="18"/>
                        <Label Text="Destino: UTS"
                               FontAttributes="Bold" FontSize="18"/>
                        <BoxView HeightRequest="1" Color="#E0E0E0"/>
                        <Label Text="Fecha: Hoy 7:00 AM" FontSize="16"/>
                        <Label Text="Llegada: 8:15 AM" FontSize="16"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Conductor -->
                <Frame Padding="15" BackgroundColor="White"
                       CornerRadius="15" HasShadow="True">
                    <Grid ColumnDefinitions="Auto,*">
                        <Image Source="user_placeholder.png"
                               WidthRequest="50"
                               HeightRequest="50"
                               Margin="0,0,15,0"/>

                        <VerticalStackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                            <Label Text="Conductora Pamela Lopez"
                                   FontAttributes="Bold"
                                   FontSize="18"/>
                            <Label Text="4.8 estrellas (25 viajes)"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ConductorInfo_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Pasajeros -->
                <Frame Padding="15" BackgroundColor="White"
                       CornerRadius="15" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Pasajeros Confirmados (2)"
                               FontAttributes="Bold"
                               FontSize="18"/>
                        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                            <BoxView WidthRequest="40" HeightRequest="40" Color="#CCCCCC"/>
                            <BoxView WidthRequest="40" HeightRequest="40" Color="#CCCCCC"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Boton inferior -->
        <Grid Grid.Row="2" Padding="10">
            <Button Text="Solicitar Raite"
                    HeightRequest="55"
                    CornerRadius="15"
                    BackgroundColor="#3F6FFF"
                    TextColor="White"
                    FontSize="18"
                    Command="{Binding SolicitarRaiteCommand}" />
        </Grid>

    </Grid>

</ContentPage>

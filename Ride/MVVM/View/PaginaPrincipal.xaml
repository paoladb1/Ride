<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.PaginaPrincipal"
             Title="Bienvenido">

   
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6BA8FF" Offset="0"/>
            <GradientStop Color="#CDE6FF" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

   
    <VerticalStackLayout Padding="25"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Frame Padding="30"
               CornerRadius="25"
               BackgroundColor="White"
               HasShadow="True"
               WidthRequest="330">

            <VerticalStackLayout Spacing="25"
                                 HorizontalOptions="Center">

             
                <Label Text="BIENVENID@S A RIDEUNI"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="#003f7f"/>

                
                <Button Text="Iniciar Sesion"
                        HeightRequest="55"
                        CornerRadius="15"
                        BackgroundColor="#005BBB"
                        TextColor="White"
                        FontAttributes="Bold"
                        WidthRequest="250"
                        Clicked="BtnLogin_Clicked"/>

                
                <Button Text="Registrarse"
                        HeightRequest="55"
                        CornerRadius="15"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontAttributes="Bold"
                        WidthRequest="250"
                        Clicked="BtnRegistro_Clicked"/>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>

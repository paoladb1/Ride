<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.Perfil"
             Title="Perfil">
    <VerticalStackLayout Padding="25" Spacing="22">
        <Label Text="Mi Perfil" FontSize="30" FontAttributes="Bold"/>
        <Label Text="Información del conductor." FontSize="15" TextColor="#6E8CA0" />

        <Frame CornerRadius="25" HasShadow="True" Padding="20" BackgroundColor="White">
            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                <Frame WidthRequest="120" HeightRequest="120" CornerRadius="60" BackgroundColor="#1C6DD0" Padding="0" HorizontalOptions="Center">
                    <Image Source="perfil.png" Aspect="AspectFill"/>
                </Frame>

                <Label Text="Andrea" FontSize="20" FontAttributes="Bold" TextColor="#003E7E" HorizontalOptions="Center"/>
                <Label Text="Conductora de Raites" FontSize="14" TextColor="#555" HorizontalOptions="Center"/>
                <BoxView HeightRequest="1" BackgroundColor="#D9D9D9"/>
                <Label Text="Universidad: UTS" FontSize="14"/>
                <Label Text="Grupo: DSM4A" FontSize="14"/>
                <Label Text="Disponible: Sí" FontSize="14"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
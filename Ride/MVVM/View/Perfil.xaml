<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.Perfil"
             NavigationPage.HasBackButton="False"
             Title="Perfil">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF"/>
            <GradientStop Color="#E3F0FF" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="18" RowDefinitions="Auto,*">

        <ImageButton Source="back.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     BackgroundColor="Transparent"
                     Clicked="BtnBack_Clicked"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Image Source="user_placeholder.png"
                               WidthRequest="100" HeightRequest="100"
                               HorizontalOptions="Center"/>

                        <Label Text="Mi Perfil" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <Label Text="Nombre: Andrea Delgado"
                               FontSize="18"/>
                        <Label Text="Correo: andrea@example.com"
                               FontSize="18"/>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Editar Perfil"
                        CornerRadius="15"
                        BackgroundColor="#3F6FFF"
                        TextColor="White"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>

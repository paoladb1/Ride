<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.Perfil"
             Title="Perfil">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#A7C8FF"/>
            <GradientStop Color="#E3F0FF" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*" Padding="20">

        <ImageButton Source="back.png"
                     BackgroundColor="Transparent"
                     WidthRequest="32"
                     HeightRequest="32"
                     Clicked="Back_Clicked"/>

        <ScrollView Grid.Row="1">

            <VerticalStackLayout Spacing="20">

                <Frame BackgroundColor="White" CornerRadius="20" Padding="20">
                    <VerticalStackLayout Spacing="15">

                        <Image Source="user_placeholder.png"
                               WidthRequest="120"
                               HeightRequest="120"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10"/>

                        <Label Text="Andrea Delgado"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <Label Text="Correo: andrea@correo.com"
                               FontSize="18"/>
                        <Label Text="Miembro desde: 2024"
                               FontSize="18"/>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Editar Perfil"
                        BackgroundColor="#3F6FFF"
                        TextColor="White"
                        CornerRadius="15"/>

            </VerticalStackLayout>

        </ScrollView>

    </Grid>

</ContentPage>

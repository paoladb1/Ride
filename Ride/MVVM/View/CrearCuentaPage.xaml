<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.CrearCuentaPage"
             Title="Crear Cuenta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Crear Cuenta" 
                   FontSize="24" 
                   HorizontalOptions="Center" />

            <Entry x:Name="EntryNombre" Placeholder="Nombre" />
            <Entry x:Name="EntryEmail" Placeholder="Correo electrónico" Keyboard="Email"/>
            <Entry x:Name="EntryPassword" Placeholder="Contraseña" IsPassword="True"/>
            <Entry x:Name="EntryConfirmPassword" Placeholder="Confirmar Contraseña" IsPassword="True"/>

            <Button Text="Crear Cuenta"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    Clicked="OnCrearCuentaClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

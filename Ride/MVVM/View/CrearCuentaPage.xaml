<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.CrearCuentaPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Crear Cuenta" 
               FontSize="24" 
               HorizontalOptions="Center" />

            <Entry x:Name="EntryNombre" Placeholder="Nombre" />
            <Entry x:Name="EntryEmail" Placeholder="Correo electronico" Keyboard="Email"/>
            <Entry x:Name="EntryPassword" Placeholder="Contrasena" IsPassword="True"/>
            <Entry x:Name="EntryConfirmPassword" Placeholder="Confirmar Contrasena" IsPassword="True"/>

            <Button Text="Crear Cuenta"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="OnCrearCuentaClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

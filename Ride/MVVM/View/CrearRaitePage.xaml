<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Ride.MVVM.ViewModel"
             x:Class="Ride.MVVM.View.CrearRaitePage"
             Title="Crear Raite"
             NavigationPage.HasBackButton="True">

    <ContentPage.BindingContext>
        <vm:CrearRaiteViewModel />
    </ContentPage.BindingContext>

    <!-- Fondo degradado opcional -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF" Offset="0.0"/>
            <GradientStop Color="#E3F0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            
            <Label Text="Publica tu Raite"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#000000"
                   HorizontalOptions="Center"/>

            
            <Label Text="Punto de Origen" FontAttributes="Bold" TextColor="#000000"/>
            <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="Ubicacion actual" 
                       PlaceholderColor="#000000"
                       TextColor="#000000" 
                       Text="{Binding Origen}" 
                       HeightRequest="50"/>
            </Frame>

           
            <Label Text="Destino" FontAttributes="Bold" TextColor="#000000"/>
            <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="A donde vas?" 
                       PlaceholderColor="#000000"
                       TextColor="#000000" 
                       Text="{Binding Destino}" 
                       HeightRequest="50"/>
            </Frame>

            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <DatePicker Date="{Binding FechaSalida}" TextColor="#000000"/>
                </Frame>
                <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <TimePicker Time="{Binding HoraSalida}" TextColor="#000000"/>
                </Frame>
            </Grid>

            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <Entry Placeholder="Asientos (Ej: 3)" 
                           PlaceholderColor="#000000"
                           TextColor="#000000" 
                           Text="{Binding AsientosDisponibles}" 
                           Keyboard="Numeric"/>
                </Frame>
                <Frame BackgroundColor="white" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <Entry Placeholder="Precio por asiento (MXN)" 
                           PlaceholderColor="#000000"
                           TextColor="#000000" 
                           Text="{Binding PrecioPorAsiento}" 
                           Keyboard="Numeric"/>
                </Frame>
            </Grid>

           
            <Button Text="Publicar Raite Ahora"
                    HeightRequest="60"
                    BackgroundColor="#1A73E8"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Command="{Binding PublicarCommand}"
                    HorizontalOptions="FillAndExpand">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="Blue"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Ride.MVVM.ViewModel"
             x:Class="Ride.MVVM.View.CrearRaitePage"
             Title="Crear Raite"
             NavigationPage.HasBackButton="True">

    <ContentPage.BindingContext>
        <vm:CrearRaiteViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Publica tu Raite"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#003E7E"
                   HorizontalOptions="Center"/>

            <!-- Origen -->
            <Label Text="Punto de Origen" FontAttributes="Bold" TextColor="#003E7E"/>
            <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="Ubicacion actual" TextColor="#003E7E" Text="{Binding Origen}" HeightRequest="50"/>
            </Frame>

            <!-- Destino -->
            <Label Text="Destino" FontAttributes="Bold" TextColor="#003E7E"/>
            <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="A donde vas?" TextColor="#003E7E" Text="{Binding Destino}" HeightRequest="50"/>
            </Frame>

            <!-- Fecha y Hora -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <DatePicker Date="{Binding FechaSalida}" TextColor="#003E7E"/>
                </Frame>
                <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <TimePicker Time="{Binding HoraSalida}" TextColor="#003E7E"/>
                </Frame>
            </Grid>

            <!-- Asientos y Precio -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <Entry Placeholder="Asientos (Ej: 3)" TextColor="#003E7E" Text="{Binding AsientosDisponibles}" Keyboard="Numeric"/>
                </Frame>
                <Frame BackgroundColor="#EEF3FF" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <Entry Placeholder="Precio por asiento (MXN)" TextColor="#003E7E" Text="{Binding PrecioPorAsiento}" Keyboard="Numeric"/>
                </Frame>
            </Grid>

            <!-- Boton Publicar -->
            <Button Text="Publicar Raite Ahora"
                    HeightRequest="60"
                    BackgroundColor="#1A73E8"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Command="{Binding PublicarCommand}"
                    HorizontalOptions="FillAndExpand">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="#155AB6"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

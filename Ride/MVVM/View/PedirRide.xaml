<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.PedirRide"
             Title="Pedir Ride">

    <VerticalStackLayout Padding="25" Spacing="20">

        <Label Text="Buscar Raite"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#000000"/>

        <Entry x:Name="EntryOrigen"
               Placeholder="Origen"
               TextColor="#000000"/>

        <Entry x:Name="EntryDestino"
               Placeholder="Destino"
               TextColor="#000000"/>

        <Button Text="Buscar"
                BackgroundColor="#005BBB"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                Clicked="OnBuscarClicked"/>

    </VerticalStackLayout>

</ContentPage>

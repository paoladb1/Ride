<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.HomePage"
             Title="Inicio Raite">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="¡Bienvenido a RideUni!"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#005BBB"
                   HorizontalOptions="Center"/>

            <Label Text="Raites disponibles"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#005BBB"/>

            <!-- Ejemplo de raites -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="15" HasShadow="True">
                <Label Text="Sendero → Uts (7:10 AM)" />
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="15" Padding="15" HasShadow="True">
                <Label Text="Mercado → Itson (11:00 AM)" />
            </Frame>

            <!-- Botón para ir a otra página de Raites -->
            <Button Text="Ver más Raites"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="BtnVerRaites_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

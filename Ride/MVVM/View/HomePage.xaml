<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.HomePage"
             Title="Inicio Ride"
             NavigationPage.HasBackButton="False">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#A7C8FF"/>
            <GradientStop Color="#E3F0FF" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*" Padding="18">

        <ImageButton Source="back.png"
                     HeightRequest="32" WidthRequest="32"
                     BackgroundColor="Transparent"
                     Clicked="BtnBack_Clicked"/>

        <ScrollView Grid.Row="1">

            <VerticalStackLayout Spacing="20">

                <Label Text="Bienvenido a Ride"
                       FontSize="28"
                       FontAttributes="Bold"/>

                <Button Text="Pedir Ride"
                        CornerRadius="15"
                        BackgroundColor="#3F6FFF"
                        TextColor="White"
                        Clicked="IrAPedirRide"/>

                <Button Text="Crear Ride"
                        CornerRadius="15"
                        BackgroundColor="#3F6FFF"
                        TextColor="White"
                        Clicked="IrACrear"/>

            </VerticalStackLayout>

        </ScrollView>

    </Grid>

</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride.MVVM.View.HomePage"
             Title="Inicio Ride"
             NavigationPage.HasBackButton="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF" Offset="0.0"/>
            <GradientStop Color="#E3F0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <Label Text="Bienvenid@s a RideUni!"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Center"/>


            <Label Text="Raites disponibles"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="Black"/>

            <Frame BackgroundColor="White"
                CornerRadius="15"
                Padding="15"
                HasShadow="True">
                <Label Text="Sendero - Uts (7:10 AM)"
                    TextColor="Black"
                    FontSize="18"/>
            </Frame>


            <Frame BackgroundColor="White"
                CornerRadius="15"
                Padding="15"
                HasShadow="True">
                <Label Text="Mercado - Itson (11:00 AM)"
                    TextColor="Black"
                    FontSize="18"/>
            </Frame>


            <Button Text="Ver mas Raites"
                 BackgroundColor="#005BBB"
                 TextColor="White"
                 FontAttributes="Bold"
                 CornerRadius="10"
                 HeightRequest="50"
                 Clicked="BtnVerRaites_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

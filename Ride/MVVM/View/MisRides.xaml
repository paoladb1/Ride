<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Ride.MVVM.ViewModel"
             x:Class="Ride.MVVM.View.MisRides"
             Title="Mis Rides">

    <!-- FONDO DEGRADADO -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7FB3FF" Offset="0.0"/>
            <GradientStop Color="#E9F2FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Tus raites"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#003E7E"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- LISTA DE RITES -->
            <CollectionView ItemsSource="{Binding Rides}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame CornerRadius="15"
                               Padding="15"
                               Margin="0,5"
                               BackgroundColor="White"
                               HasShadow="True"
                               BorderColor="#DDD">

                            <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">

                                <!-- TEXTO DEL RIDE -->
                                <Label Text="{Binding .}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#003E7E"
                                       VerticalOptions="Center"
                                       LineBreakMode="TailTruncation"/>

                                <!-- BOTON ELIMINAR -->
                                <Button Text="Eliminar"
                                        Grid.Column="1"
                                        BackgroundColor="#FF5C5C"
                                        TextColor="White"
                                        CornerRadius="12"
                                        HeightRequest="38"
                                        WidthRequest="90"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>

                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
